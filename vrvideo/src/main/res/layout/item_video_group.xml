<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="200dp">
    
    <TextView
        android:id="@+id/textview_item_video_group_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_70px"
        android:background="@color/yellow"
        android:gravity="center"
        android:paddingLeft="@dimen/dip_30px"
        android:paddingRight="@dimen/dip_30px"
        android:text="名胜古迹"
        android:textColor="@color/white"
        android:textSize="@dimen/text_34px"/>
    <TextView
        android:id="@+id/textview_item_video_group_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_70px"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dip_30px"
        android:paddingRight="@dimen/dip_30px"
        android:text="@string/more"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_34px"/>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_item_video_group_more"
        android:baselineAligned="false"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <include
            android:id="@+id/include_video_item1"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <include
            android:id="@+id/include_video_item2"
            layout="@layout/item_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
