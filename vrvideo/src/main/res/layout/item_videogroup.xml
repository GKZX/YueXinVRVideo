<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/textview_item_videogroup_category_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_70px"
        android:background="@color/yellow"
        android:gravity="center"
        android:paddingLeft="@dimen/dip_30px"
        android:paddingRight="@dimen/dip_30px"
        android:text="名胜古迹"
        android:textColor="@color/white"
        android:textSize="@dimen/text_34px"/>
    <TextView
        android:id="@+id/textview_item_videogroup_more"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dip_70px"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dip_30px"
        android:paddingRight="@dimen/dip_30px"
        android:text="@string/more"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_34px"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_item_videogroup_category_name">
        <include layout="@layout/include_recyclerview"/>
    </FrameLayout>
    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/recyclerview_item_videogroup_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/textview_item_videogroup_category_name"/>-->


</RelativeLayout>
