<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/text3"/>

            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>


    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/colorAccent"/>

            <size
                android:width="15dp"
                android:height="15dp"/>
        </shape>

    </item>

    <item >
        <shape
            android:shape="oval">

            <solid
                android:color="@color/white"/>

            <size
                android:width="15dp"
                android:height="15dp"/>

        </shape>

    </item>
</selector>
