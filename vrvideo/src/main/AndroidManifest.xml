<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hzgkyt.vr">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".VRApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
    >
        <activity android:name="com.hzgkyt.vr.activity.MainActivity"
                  android:theme="@style/AppTheme.Launcher"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PersonalCenterActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.SignupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".activity.LoginActivity"
                  android:screenOrientation="portrait"
        />
        <activity android:name=".activity.MessageVerifyActivity"
                  android:screenOrientation="portrait"

        />

        <activity android:name=".activity.ChangePasswordActivity"
                  android:screenOrientation="portrait"

        />
        <activity android:name=".activity.VRVideoActivity"
        android:screenOrientation="portrait"
        />
    </application>

</manifest>